<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.donation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Ekiya"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".certificate"></activity>
        <activity android:name=".Onboarding" />
        <activity android:name=".ProductDetails" />
        <activity android:name=".ViewRequirements" />
        <activity android:name=".PasswordReset" />
        <activity android:name=".Register" />
        <activity android:name=".UploadDonation" />
        <activity android:name=".profile" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".NewRequirement" />
        <activity android:name=".explore" />
        <activity android:name=".categories" />
        <activity android:name=".homepage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>