<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF2DD"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true"
    android:soundEffectsEnabled="true"
    android:touchscreenBlocksFocus="true"
    tools:context=".homepage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:cropToPadding="true"
        android:src="@drawable/donation_homepage"
        app:layout_constraintBottom_toTopOf="@+id/newsback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/newsback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="212dp"
        android:animateLayoutChanges="true"
        android:background="#FFFFFF"
        android:backgroundTint="#FAE4C4"
        android:clickable="false"
        android:elevation="2dp"
        android:fadeScrollbars="true"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="30dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aroundtheworld"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:elevation="5dp"
                android:ellipsize="none"
                android:focusable="auto"
                android:fontFamily="sans-serif-black"
                android:foregroundGravity="center_vertical"
                android:freezesText="false"
                android:gravity="clip_horizontal|center|clip_vertical|center_horizontal|center_vertical"
                android:selectAllOnFocus="false"
                android:shadowColor="#E6FCBF49"
                android:shadowRadius="5"
                android:text="Around The World"
                android:textColor="#FCBF49"
                android:textColorLink="#FCBF49"
                android:textSize="28sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/categoriesbtn"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:adjustViewBounds="true"
        android:background="#c31b233a"
        android:clickable="true"
        android:cropToPadding="true"
        android:elevation="2dp"
        android:filterTouchesWhenObscured="true"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:foreground="@drawable/categories"
        android:longClickable="true"
        android:scaleType="centerInside"
        android:translationZ="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="ContentDescription"
        tools:src="@drawable/categories"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/donatebtn"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:background="#c31b233a"
        android:elevation="2dp"
        android:foreground="@drawable/donateicon"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:translationZ="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/categoriesbtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="ContentDescription"
        tools:src="@drawable/donateicon"
        tools:targetApi="lollipop" />


