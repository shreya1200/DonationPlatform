<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF2DD"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true"
    android:soundEffectsEnabled="true"
    android:touchscreenBlocksFocus="true"
    tools:context=".homepage">

    <ImageView
        android:id="@+id/donationimg"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/donation_homepage"
        app:layout_constraintBottom_toTopOf="@+id/newsback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintBottom_toTopOf="@+id/newsback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/postreqbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:autoText="true"
            android:background="@drawable/txtgrad"
            android:backgroundTint="#212738"
            android:clickable="true"
            android:cursorVisible="true"
            android:filterTouchesWhenObscured="true"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:fontFamily="@font/amaranth"
            android:longClickable="true"
            android:outlineProvider="background"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="centerCrop"
            android:text="Post a Request"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#ffa200"
            android:textDirection="rtl"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:ignore="ContentDescription"
            tools:src="@drawable/categories"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/allreqbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:autoText="true"
            android:background="@drawable/txtgrad"
            android:backgroundTint="#212738"
            android:clickable="true"
            android:cursorVisible="true"
            android:filterTouchesWhenObscured="true"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:fontFamily="@font/amaranth"
            android:longClickable="true"
            android:outlineProvider="background"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="centerCrop"
            android:text="All Requests"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#ffa200"
            android:textDirection="rtl"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:ignore="ContentDescription"
            tools:src="@drawable/categories"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/alldonationsbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:autoText="true"
            android:background="@drawable/txtgrad"
            android:backgroundTint="#212738"
            android:clickable="true"
            android:cursorVisible="true"
            android:filterTouchesWhenObscured="true"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:fontFamily="@font/amaranth"
            android:longClickable="true"
            android:outlineProvider="background"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="centerCrop"
            android:text="All Donations"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#ffa200"
            android:textDirection="rtl"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:ignore="ContentDescription"
            tools:src="@drawable/categories"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/donatebtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:autoText="true"
            android:background="@drawable/txtgrad"
            android:backgroundTint="#212738"
            android:clickable="true"
            android:cursorVisible="true"
            android:filterTouchesWhenObscured="true"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:fontFamily="@font/amaranth"
            android:longClickable="true"
            android:outlineProvider="background"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="centerCrop"
            android:text="Make a Donation"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#ffa200"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:ignore="ContentDescription"
            tools:src="@drawable/categories"
            tools:targetApi="lollipop" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/newsback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="212dp"
        android:animateLayoutChanges="true"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:clickable="false"
        android:fadeScrollbars="true"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true"
        android:translationZ="50dp"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aroundtheworld"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttondrawable"
                android:backgroundTint="#212738"
                android:fontFamily="@font/amaranth"
                android:padding="10dp"
                android:text="Around The World"
                android:textAlignment="center"
                android:textColor="#ffa200"
                android:textSize="22sp"
                android:textStyle="bold" />

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

