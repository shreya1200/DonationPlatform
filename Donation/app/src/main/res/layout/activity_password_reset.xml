<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordReset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/logo"
            android:transitionName="logo_text" />

        <TextView
            android:id="@+id/helloo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/overlock_bold"
            android:textStyle="bold"
            android:text="Set your new Password! "
            android:textColor="#F97068"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:transitionName="logo_image" />
        <TextView
            android:id="@+id/signinlo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Just one step and you are ready to go!"
            android:textSize="18sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        android:fontFamily="@font/amaranth"
        android:outlineProvider="background"
        android:text="Enter registered email"
        android:textSize="18sp"
        android:textColor="#f97068"
        android:textStyle="normal"
        android:layout_marginStart="50dp"/>
    <EditText
        android:id="@+id/username"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:background="@drawable/ic_email"
        android:paddingStart="45dp"
        android:hint="Email-id"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="#0B1A58"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/proceed"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="48dp"
        android:background="#ed765e"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ed765e"
        android:enabled="true"
        android:fontFamily="@font/amaranth"
        android:text="Proceed"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:layout_marginBottom="64dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password reset email sent!"
        android:textColor="#00ff0f"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Failed to send email.\nPlease check email address."
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:visibility="invisible"/>
</RelativeLayout>