<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/ic_background"
    android:foregroundGravity="center"
    app:layout_anchorGravity="center"
    tools:context=".profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/bluelogo" />

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_bluebutton"
                android:backgroundTint="#00B0D0E8"
                android:elevation="10dp"
                android:ellipsize="end"
                android:gravity="center|end"
                android:text="Logout"
                android:textColor="#0B1A58" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/profilecard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="50dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/productImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/imagebg"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/amaranth"
            android:textColor="#0B1A58"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:gravity="center_horizontal"
            android:textColor="#0B1A58"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/contacttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:gravity="center_horizontal"
            android:textColor="#0B1A58"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:outlineProvider="background"
            android:weightSum="3">

            <Button
                android:id="@+id/prevDonationsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_bluebutton"
                android:backgroundTint="#B0D0E8"
                android:elevation="10dp"
                android:ellipsize="middle"
                android:text="Previous"
                android:textColor="#0B1A58" />

            <Button
                android:id="@+id/proceedToDonate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_bluebutton"
                android:backgroundTint="#B0D0E8"
                android:elevation="10dp"
                android:ellipsize="middle"
                android:text="Donate"
                android:textColor="#0B1A58" />

            <Button
                android:id="@+id/currDonationsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_bluebutton"
                android:backgroundTint="#B0D0E8"
                android:elevation="10dp"
                android:ellipsize="middle"
                android:text="Current"
                android:textColor="#0B1A58" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/DonationsLists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>