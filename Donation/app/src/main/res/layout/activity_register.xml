<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/logo"/>


        <TextView
            android:id="@+id/welcometext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:fontFamily="@font/overlock_bold"
            android:text="Welcome!"
            android:textColor="#f97068"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/helptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:fontFamily="sans-serif"
            android:text="Help create a better World"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/profileimg"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/finanacialaidcat" />

            <ImageButton
                android:id="@+id/uploadphoto"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_alignTop="@+id/profileimg"
                android:layout_alignEnd="@+id/profileimg"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#f97068"
                android:src="@android:drawable/ic_menu_camera" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_name"
                android:ellipsize="start"
                android:ems="13"
                android:paddingStart="45dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/number"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_phone"
                android:ellipsize="start"
                android:ems="13"
                android:gravity="left|center_vertical"
                android:hint="Contact Number"
                android:paddingStart="45dp"
                android:inputType="phone"

                android:textSize="14sp" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/username"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_email"
                android:ellipsize="start"
                android:ems="13"
                android:hint="Email-Id"
                android:inputType="textEmailAddress"
                android:paddingStart="45dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_password"
                android:ellipsize="start"
                android:ems="13"
                android:hint="Password"
                android:paddingStart="45dp"
                android:inputType="textPassword"

                android:textSize="14sp" />

            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_confirmpassword"
                android:ellipsize="start"
                android:ems="13"
                android:hint="Confirm Password"
                android:paddingStart="45dp"
                android:inputType="textPassword"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/registerbutton"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#ed765e"
            android:backgroundTint="#ed765e"
            android:cursorVisible="true"
            android:fontFamily="sans-serif"
            android:text="Register"
            android:textColor="#ffffff"
            android:textColorHint="#E47D7D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textforlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/amaranth"
            android:text="Already a member? Login here."
            android:textColor="#ffa41b"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>